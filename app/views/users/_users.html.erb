<% if users.any? %>
  <ul class="lisy-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <duv>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </duv>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>